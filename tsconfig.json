{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "baseUrl": "./",  // 注意这个是必须的
    "types": ["element-plus/global"],
    "paths": {  // 导入配置
      "@/*": [  // 标识 @ 符号需要指向的文件目录
        "src/*"
      ]
    }
  },
  "include": ["src/**/*.js","src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],

}
